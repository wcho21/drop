---
import Footer from "@/components/layout/Footer.astro";
import ArticleList from "@/components/page/ArticleList.astro";
import SeriesList from "@/components/page/SeriesList.astro";
import Base from "@/layouts/Base.astro";
import { getSeries } from "@/scripts/utils/pages";

import { getCollection } from "astro:content";
const articles = await getCollection("blog");
const decOrderDateComparator = createDateComparator("decreasing");
articles.sort((item1, item2) =>
  decOrderDateComparator(item1.data.date, item2.data.date),
);

function createDateComparator(
  order: "increasing" | "decreasing" = "increasing",
) {
  return (date1: Date, date2: Date) => {
    const diff = date1.getTime() - date2.getTime();
    const reverseFactor = order === "increasing" ? 1 : -1;

    return diff * reverseFactor;
  };
}

const featuredArticles = articles.filter(
  article => (article.data.featured ?? false) === true,
);
const nonfeaturedArticles = articles.filter(
  article => (article.data.featured ?? false) === false,
);
const seriesArticles = articles.filter(
  article => article.data.series !== undefined,
);
---

<Base pageTitle="Home">
  <main class="text-gray-800">
    <div class="mb-12 pt-12 border-t-8 border-gray-800">

      {
        featuredArticles.length > 0 && (
          <ArticleList heading="Featured." articles={featuredArticles} />
        )
      }

      <div class="mt-12">
        <ArticleList heading="Articles." articles={nonfeaturedArticles} />
      </div>

      <div class="mt-12">
        <SeriesList heading="Series." series={getSeries(seriesArticles)} />
      </div>
    </div>
  </main>

  <div class="my-12 pt-12 border-t border-gray-800">
    <Footer />
  </div>
</Base>

<style>
.article-card {
  @apply border-t border-gray-100;
}
.article-card:first-child {
  @apply border-none;
}
</style>
