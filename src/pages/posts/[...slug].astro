---
import Base from "@/layouts/Base.astro";
import ArticleCard from "@/components/page/ArticleCard.astro";
import Footer from "@/components/layout/Footer.astro";
import Heading1 from "@/components/core/Heading1.astro";
import Heading2 from "@/components/core/Heading2.astro";
import { getCollection } from "astro:content";
import { formatDate } from "@/scripts/utils/formatters";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const entries = await getCollection("blog");
  const staticPaths = entries.map((entry, i) => ({
    params: { slug: entry.slug },
    props: {
      prevEntry: (i > 0) ? entries[i-1] : undefined,
      nextEntry: (i < entries.length-1) ? entries[i+1] : undefined,
      entry,
    },
  }));

  return staticPaths;
}

interface Props {
  entry: CollectionEntry<"blog">,
}

const { entry, prevEntry, nextEntry } = Astro.props;
const { title, date } = entry.data;
const { Content } = await entry.render();
---

<Base pageTitle={title}>
  <div class="text-gray-800">
    <div class="border-t-8 pt-4 pb-8 border-gray-800">
      <header class="mb-16 pb-6 font-serif border-b border-gray-800">
        <Heading1>{title}</Heading1>
        <p class="mt-2 text-[14px] font-light"><time>{formatDate(date)}</time></p>
      </header>

      <main id="post-main">
        <Content />
      </main>
    </div>

    <div class="my-12 py-12 border-t border-gray-800">
      <Heading2><span class="font-serif">다른 글</span></Heading2>
      {
        nextEntry && <ArticleCard article={nextEntry} />
      }
      {
        prevEntry && <ArticleCard article={prevEntry} />
      }
      <div class="mt-4">
        <a href="/">
          <div class="rounded-md bg-gray-50 p-2">« 🏠 Home</div>
        </a>
      </div>
    </div>

    <div class="mt-2">
      <Footer />
    </div>
  </div>
</Base>

<style is:global>
  #post-main {
    @apply text-[14px] md:text-[16px] text-gray-800 text-justify;
  }

  #post-main > h1 {
    @apply text-[20px] md:text-[24px] font-bold mt-16 mb-2 font-serif;
  }

  #post-main > h2 {
    @apply text-[16px] md:text-[18px] font-bold mt-8 mb-2 font-serif;
  }

  #post-main > p {
    @apply my-2;
  }

  #post-main > .astro-code {
    @apply text-[0.875em] pl-4 border-l border-gray-500;
  }

  #post-main > .katex-display {
    @apply overflow-x-auto overflow-y-hidden;
  }

  #post-main > p > a {
    @apply text-blue-500;
  }

  #post-main > ul {
    @apply ml-6;
  }

  #post-main > ul > li {
    @apply list-disc my-2;
  }
</style>
