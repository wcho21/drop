---
import { Image } from "astro:assets";

interface Props {
  src: ImageMetadata,
  alt: string,
  caption?: string,
}

const { src, alt, caption } = Astro.props;
---

<figure class="w-full block py-3">
  <Image
    src={src}
    alt={alt}
    format="webp"
    quality={85}
    class="w-fit mx-auto rounded"
  />
  {caption !== undefined && (
    <figcaption
      class="my-1 text-sm text-gray-500 text-center"
    >{caption}</figcaption>
  )}
</figure>
