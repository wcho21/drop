---
import { Image } from "astro:assets";

interface Props {
  src: ImageMetadata,
  alt: string,
}

const { src, alt } = Astro.props;
---

<figure class="w-full block py-3">
  <Image
    src={src}
    alt={alt}
    format="webp"
    quality={85}
    class="w-fit mx-auto"
  />
  <slot name="caption" />
</figure>
