---
import katex from "katex";

interface Props {
  formula: string;
  inline: boolean;
}

const { formula, inline = true } = Astro.props;

const renderedFormula = katex.renderToString(formula, {displayMode: !inline});
const Outer = inline ? "span" : "div";
---

<Outer set:html={renderedFormula}></Outer>
