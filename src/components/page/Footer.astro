---
import Heading from "@/components/core/Heading.astro";
import TopNavItem from "./TopNavItem.astro";
import GrayLink from "./GrayLink.astro";
import config from "@/config";

const links = [
  { label: "GITHUB", url: config.contacts.github },
  { label: "EMAIL", url: config.contacts.email },
] as const;

interface Props {
  class: string;
}

const classNames = Astro.props.class;
---

<footer class={classNames}>
  <Heading>Drop.</Heading>
  <div class="font-light text-[14px]">
    <p>컴퓨테이션에 대해 이야기합니다.</p>
  </div>
  <nav class="mt-4 text-[12px] md:text-[14px] font-light list-none flex">
    {
      links.map((link) => (
        <TopNavItem>
          <GrayLink href={link.url}>{link.label}</GrayLink>
        </TopNavItem>
      ))
    }
  </nav>
</footer>
