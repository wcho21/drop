% tikz styles for arrow

\NeedsTeXFormat{LaTeX2e}
\ProvidesClass{ts-arrow}[2024/05/03]

\usetikzlibrary{arrows.meta}

\def\@TSAscale{1.1875}

\tikzset{
  StlthBase/.style={-{Stealth[scale=\@TSAscale]}},
  StlthRevBase/.style={{Stealth[scale=\@TSAscale]}-},
  StlthBodyShorten/.style={shorten >=0.75mm,shorten <=0.5mm},
  Stlth/.style={StlthBase,StlthBodyShorten},
  StlthRev/.style={StlthRevBase,StlthBodyShorten}
}
