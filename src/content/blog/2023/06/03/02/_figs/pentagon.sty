\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{pentagon}

\def\edge{12mm}

\newcommand\drawpentagon{
  \draw (0,0) coordinate (P1)
    -- ++(360-36:\edge) coordinate (P2)
    -- ++(360-108:\edge) coordinate (P3)
    -- ++(180:\edge) coordinate (P4)
    -- ++(180-72:\edge) coordinate (P5)
    -- cycle;
}
\newcommand\drawlabel{
  \node[above] at (P1) {1};
  \node[right=-0.25mm] at (P2) {2};
  \node[below right=-0.5mm] at (P3) {3};
  \node[below left=-0.5mm] at (P4) {4};
  \node[left=-0.25mm] at (P5) {5};
}
