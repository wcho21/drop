\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{drawutil}

\newcommand\myfbox[1]{\fbox{#1\strut}}

\newcommand\drawOpWithPowers[7]{
  \def\parent{#1}
  \def\x{#2}
  \def\y{#3}
  \def\left{#4}
  \def\leftName{#5}
  \def\right{#6}
  \def\rightName{#7}

  \node[inner sep=0pt,draw=none] at (\x,\y) {\myfbox{\texttt{\parent}}}
    child {node (\leftName)  {\small\texttt{\left }} edge from parent[draw=none]}
    child {node (\rightName) {\small\texttt{\right}} edge from parent[draw=none]};
}
